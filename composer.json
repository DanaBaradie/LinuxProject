{
    "name": "school-bus-tracking/system",
    "description": "Professional School Bus Tracking System with real-time GPS tracking",
    "type": "project",
    "keywords": ["school", "bus", "tracking", "gps", "php"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dana Baradie",
            "email": "dana@example.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "mailgun/mailgun-php": "^3.5",
        "php-http/guzzle7-adapter": "^1.0",
        "guzzlehttp/psr7": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "config/"
        },
        "files": [
            "config/config.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check": [
            "@php -l config/*.php",
            "@php -l includes/*.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}